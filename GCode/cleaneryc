#! /usr/local/bin/python3.7

verbose = '''

    Clean Python cache 0.3

'''


__name__ == "__main__"

from gcode.primitive import rm
from gcode.unit.Atoms import Mapper


cleaner = Mapper()


DIR_TARGET = ['__pycache__', '.egg-info',]


for pdir, dir in cleaner.dirs:
    for DIR in DIR_TARGET:
        if DIR in dir:
            rm(pdir)
            cleaner.Log(f'Deleted {pdir}', True)
